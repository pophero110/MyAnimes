<%include ../partials/header%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center; margin: 25px">Edit <%=Animes.name%></h1>
		<div style="width:30% ; margin: 0 auto";>
			<form action="/Animes/<%=Animes.id%>?_method=PUT" method= "post">
			<div class="form-group">
				<input class="form-control" type="text" name="Anime[name]" value="<%=Animes.name%>"></div>
			<div class="form-group">
				<input class="form-control" type="text" name="Anime[image]" value="<%=Animes.image%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="Anime[description]" value="<%=Animes.description%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="Anime[price]" value="<%=Animes.price%>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<button class="btn-lg btn-primary btn-block">Submit!</button>
			</div>
			
			
			
			
		</form>
		<a href="/Animes">GO BACK</a>
		</div>
		

		
	</div>

</div>
<%include ../partials/footer%>