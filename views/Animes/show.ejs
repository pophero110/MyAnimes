<%include ../partials/header%>
<div class="container">
	<h3>Romance Animes</h3>
	<div class="row">
		<div class="col-md-3">
			<div class="list-group">
				<div class="list-group-item active">1</div>
				<div class="list-group-item">2</div>
				<div class="list-group-item">3</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=Animes.image%>">
				<div class="caption">
					<h4 class="pull-right">$<%=Animes.price%></h4>
					<h4><a href=""><%=Animes.name%></a></h4>
					<p><%=Animes.description%></p>
					<p class="pull-right"><em>Sumbit by <%=Animes.author.username%></em></p>
					<% if(currentUser && Animes.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-xs btn-warning" href="/Animes/<%=Animes._id%>/edit">Edit</a>
					<form  id="delete-button"  action="/Animes/<%=Animes._id%>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
					<%}%>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<div><a class="btn btn-primary" href="/Animes/<%=Animes._id%>/comments/new">Add New Comment</a></div>
				</div>
				<hr>
				<%Animes.comment.forEach(function(comment){%>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author.username%></strong>
						<span class="pull-right">10 days ago</span>
						<p><%=comment.text%></p>
						<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-xs btn-warning" href="/Animes/<%=Animes._id%>/comments/<%=comment._id%>/edit">Edit</a>
						<form  id="delete-button"  action="/Animes/<%=Animes._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>
						<%}%>
						
					</div>
				</div>
				<%})%>
			</div>

			
			

			
			

		</div>
	</div>
</div>

	



<%include ../partials/footer%> 